<Window x:Class="Assignment5.SubscribeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d"
        Title="SubscribeForm" Height="450" Width="800">
    <Grid>
        <Image Source="images/formbackground.jpg" Stretch="Fill"/>
        <TextBox Name="FullName" HorizontalAlignment="Left" Height="23" Margin="269,105,0,0" TextWrapping="Wrap" Text="Full Name" VerticalAlignment="Top" Width="120" AllowDrop="False"/>
        <TextBox Name="EmailAddress" HorizontalAlignment="Left" Height="23" Margin="269,148,0,0" TextWrapping="Wrap" Text="Email Address" VerticalAlignment="Top" Width="120" AllowDrop="False"/>
        <Button Name="btnSubmit" Click="submitForm" Content="Submit" HorizontalAlignment="Left" Margin="289,207,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock Name="ErrorMessage" HorizontalAlignment="Left" Margin="430,128,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Visibility="Hidden"/>

    </Grid>
</Window>
